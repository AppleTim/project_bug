{% extends 'base.html.twig' %}

{% block body %}
    <h1>FootballPlayer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ footballPlayer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ footballPlayer.name }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ footballPlayer.size }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ footballPlayer.age }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('footballplayer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('footballplayer_edit', { 'id': footballPlayer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
